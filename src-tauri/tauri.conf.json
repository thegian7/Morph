{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Morph",
  "version": "0.1.0",
  "identifier": "com.morphlight.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "icon": [
      "icons/32x32@2x.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:morph.db"]
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "border-top",
        "url": "src/overlay/index.html",
        "width": 1920,
        "height": 16,
        "x": 0,
        "y": 0,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "border-bottom",
        "url": "src/overlay/index.html",
        "width": 1920,
        "height": 16,
        "x": 0,
        "y": 1064,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "border-left",
        "url": "src/overlay/index.html",
        "width": 16,
        "height": 1048,
        "x": 0,
        "y": 16,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "border-right",
        "url": "src/overlay/index.html",
        "width": 16,
        "height": 1048,
        "x": 1904,
        "y": 16,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      }
    ]
  }
}
