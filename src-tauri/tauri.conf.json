{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "LightTime",
  "version": "0.1.0",
  "identifier": "com.lighttime.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "icon": [
      "icons/32x32@2x.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.png"
    ]
  },
  "app": {
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "settings",
        "title": "LightTime Settings",
        "url": "src/settings/index.html",
        "width": 600,
        "height": 500,
        "visible": false,
        "decorations": true,
        "resizable": true
      },
      {
        "label": "border-top",
        "url": "src/overlay/index.html",
        "width": 1920,
        "height": 6,
        "x": 0,
        "y": 0,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "border-bottom",
        "url": "src/overlay/index.html",
        "width": 1920,
        "height": 6,
        "x": 0,
        "y": 1074,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "border-left",
        "url": "src/overlay/index.html",
        "width": 6,
        "height": 1068,
        "x": 0,
        "y": 6,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "border-right",
        "url": "src/overlay/index.html",
        "width": 6,
        "height": 1068,
        "x": 1914,
        "y": 6,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      }
    ]
  }
}
